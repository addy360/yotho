<div class="row">
	<h3>{{title}}</h3>
	<div class="col s12 m9">
		<div class="card">
			<div class="card-content">
				<span class="card-title">{{ dateFormatter date "MMMM Do YYYY"}}</span>
				{{{body}}}
			</div>
		</div>
	</div>
	<div class="col s12 m3">
		<div class="card center">
			<div class="card-content">
				<span class="card-title">{{first_name}} {{last_name}}</span>
				<img src={{picture}} style="width: 100%" class="circle">
			</div>
			<div class="card-action">
				<a href="/stories/user/{{user_id}}" class="darken-2">More from {{first_name}}</a>
			</div>
		</div>
	</div>
</div>